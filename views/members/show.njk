{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section 
    class="avatar" 
    style= "background: url({{ member.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">

        <h3>Detalhes</h3>

        <div class="item">
            <div>Nome</div>
            <div>{{ member.name }}</div>
        </div>

        <div class="item double-item">
            <div>
                <div>Idade</div>
                <div>{{ member.age }} anos</div>
            </div>
            <div>
                <div>Aniverário</div>
                <div>{{ member.birth }}</div>
            </div>
        </div>

       
        <div class="item">
            <div>Sexo</div>
            <div>{{ "Feminino" if member.gender == "F" else "Masculino" }}</div>
        </div>

         <div class="item">
            <div>Tipo Sanguíneo</div>
            <div>{{ member.blood }} </div>
        </div>

              
        <div class="item double-item">
            <div>
                <div>Peso (kg)</div>
                <div>{{ member.weight }} </div>
            </div>
            <div>
                <div>Altura (cm)</div>
                <div>{{ member.height }}</div>
            </div>
        </div>
    
        <div class="item last-item">
            <div>Email</div>
            <div>{{ member.email }} </div>
        </div>

        <a href="/members/{{member.id}}/edit" class="button">Editar</a>

    </section>
</div>

{% endblock content %}