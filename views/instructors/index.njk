{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
        <table width="100%">
        <thead>
            <tr>
                <th>Instrutor</th>
                <th>Atuação</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for instructor in instructors %}
            <tr>
                <td>
                   <span style="background-image: url({{instructor.avatar_url}}"></span>
                    {{instructor.name}}
                </td> 
                <td class='instructor-services'><span>{{instructor.services}}</span></td> 
                <td><a href="instructors/{{instructor.id}}">Ver</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="/instructors/create">Novo</a>
</div>

{% endblock content %}